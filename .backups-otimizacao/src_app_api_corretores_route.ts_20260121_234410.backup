import { NextRequest, NextResponse } from 'next/server'
import { PrismaClient } from '@prisma/client'

const globalForPrisma = global as unknown as { prisma: PrismaClient }
const prisma = globalForPrisma.prisma || new PrismaClient()
if (process.env.NODE_ENV !== 'production') globalForPrisma.prisma = prisma

export async function POST(request: NextRequest) {
  try {
    const body = await request.json()
    
    // Validação básica
    if (!body.nome || !body.email || !body.telefone || !body.creci) {
      return NextResponse.json(
        {
          success: false,
          error: 'Campos obrigatórios não preenchidos'
        },
        { status: 400 }
      )
    }

    // Verificar se já existe corretor com mesmo e-mail
    const existeEmail = await prisma.corretor.findUnique({
      where: { email: body.email }
    })

    if (existeEmail) {
      return NextResponse.json(
        {
          success: false,
          error: 'Já existe um corretor com este e-mail'
        },
        { status: 400 }
      )
    }

    // Verificar se já existe corretor com mesmo CRECI
    const existeCreci = await prisma.corretor.findUnique({
      where: { creci: body.creci }
    })

    if (existeCreci) {
      return NextResponse.json(
        {
          success: false,
          error: 'Já existe um corretor com este CRECI'
        },
        { status: 400 }
      )
    }

    // Converter datas para ISO-8601 DateTime
    const dataAdmissao = body.dataAdmissao 
      ? new Date(body.dataAdmissao).toISOString() 
      : new Date().toISOString()

    const dataDemissao = body.dataDemissao 
      ? new Date(body.dataDemissao).toISOString() 
      : null

    // Criar corretor
    const corretor = await prisma.corretor.create({
      data: {
        nome: body.nome,
        email: body.email,
        telefone: body.telefone,
        cpf: body.cpf || null,
        creci: body.creci,
        dataAdmissao: dataAdmissao,
        dataDemissao: dataDemissao,
        ativo: body.ativo !== undefined ? body.ativo : true,
        banco: body.banco || null,
        agencia: body.agencia || null,
        conta: body.conta || null,
        tipoConta: body.tipoConta || null,
        pix: body.pix || null,
        comissaoPadrao: body.comissaoPadrao || '5',
        foto: body.foto || null,
        observacoes: body.observacoes || null
      }
    })

    return NextResponse.json({
      success: true,
      data: corretor,
      message: 'Corretor cadastrado com sucesso!'
    })

  } catch (error: any) {
    console.error('❌ Erro ao cadastrar corretor:', error)
    
    return NextResponse.json(
      {
        success: false,
        error: 'Erro ao cadastrar corretor',
        details: process.env.NODE_ENV === 'development' ? error.message : undefined
      },
      { status: 500 }
    )
  }
}

export async function GET() {
  try {
    const corretores = await prisma.corretor.findMany({
      orderBy: {
        nome: 'asc'
      },
      include: {
        _count: {
          select: {
            vendas: true,
            comissoes: true,
            leads: true
          }
        }
      }
    })

    return NextResponse.json({
      success: true,
      data: corretores
    })

  } catch (error: any) {
    console.error('❌ Erro ao buscar corretores:', error)
    
    return NextResponse.json(
      {
        success: false,
        error: 'Erro ao buscar corretores',
        details: process.env.NODE_ENV === 'development' ? error.message : undefined
      },
      { status: 500 }
    )
  }
}
